<%- include('./partials/header')-%>

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel" style="width: 500px;" width="500px">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="/image/giulia-quadrifoglio-my2006.jpg" class="d-block w-100" alt="...">
        </div>

        <%carrousel.forEach(function(carrousel) {%>
        <div class="carousel-item">
            <img src="<%=carrousel.image%>" class="d-block w-100" alt="...">
        </div>
        <%});%>

     </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


<div class="container">
    <h4>select image to upload</h4>
        <form action="/carrousel" method="POST" enctype="multipart/form-data">
            <div class="form">
                <input type="file" name="image">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
</div>

<%- include('./partials/footer')-%>